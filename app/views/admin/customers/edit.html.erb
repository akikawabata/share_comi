<div class="col-11 col-md-8 col-lg-9">
  <p><%= flash[:notice] %></p>
  <h5><b>管理者アカウント情報編集</b></h5>

  <%= form_with model: @admin, url:admin_customers_path, method: :patch do |f| %>

    <h6 class="h6-left"><b><label for="inputName">会社名</label></b><br>
      <%= f.text_field :company %>
    </h6>

    <h6 class="h6-left"><b><label for="inputTeam">会社住所</label></b><br>
      <%= f.text_field :company_address %>
    </h6>

    <h6 class="h6-left"><b><label for="inputTeam">管理者名</label></b><br>
      <%= f.text_field :administrator_name %>
    </h6>

    <h6 class="h6-left"><b><label for="inputTeam">メールアドレス</label></b><br>
      <%= f.text_field :email %>
    </h6>
    <br>

    <div class="left-50px">
      <%= f.submit "変更を保存", class: "btn btn-success mr-2" %>
    </div>
  <% end %><!--|f|-->
  <br>

</div><!--col-md-9-->

