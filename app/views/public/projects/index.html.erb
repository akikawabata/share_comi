<div class="col-10 col-sm-9 col-md-9 col-lg-9">
  <p><%= flash[:notice] %></p>
  <h5><b>すべての企画一覧</b></h5>
  <br>
  
  <table>
    <thead>
      <tr>
        <th>企画タイトル</th>
        <th>開催日時</th>
        <th>終了日時</th>
      </tr>
    </thead>
    <tbody>
      <% @projects.each do |project| %>
        <tr>
          <td><%= link_to project.project_name, public_project_path(project.id), class: "custom-link" %></td>
          <td><%= project.start_date_time&.strftime("%Y/%m/%d %H:%M") %>
                <% if project.start_date_time.nil?  %>
                  <p>未設定</p>
                <% end %>
          </td>
          <td><%= project.end_date_time&.strftime("%Y/%m/%d %H:%M") %>
                <% if project.end_date_time.nil?  %>
                  <p>未設定</p>
                <% end %>
          </td>
      <% end %>
        </tr>
   <tbody>
  </table>

  <div class ="notice">
    <% if @projects.count == 0 %>
      <p>企画が追加されていません</p>
      <% else %>
    <% end %>
  </div>
  </div><!--col-md-9-->