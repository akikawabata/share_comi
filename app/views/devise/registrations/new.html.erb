<div class="text-center">
  <div class="col-md-12">
    <p><%= flash[:notice] %></p>

      <% if flash[:alert] %>
      <div class="alert alert-danger">
        <%= flash[:alert] %>
      </div>
      <% end %>

    <!--管理者新規登録-->

    <% if request.path.match(/\/admin(\/)?/) %>
      <h4><b>管理者新規登録</b></h4>
        <%= form_for(Admin.new, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <h6><b><%= f.label :会社名 %></b><br>
          <%= f.text_field :company %></h6>


          <h6><b><%= f.label :会社住所 %></b><br>
          <%= f.text_field :company_address %></h6>


          <h6><b><%= f.label :管理者名 %></b><br>
          <%= f.text_field :administrator_name %></h6>

          <h6><b><%= f.label :メールアドレス %></b><br>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %></h6>

          <h6><b><%= f.label :パスワード %></b><br>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %></h6>

          <h6><b><%= f.label :パスワード再入力 %></b><br>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %></h6>
          <br>

          <%= f.submit "新規登録", class: "btn btn-success" %>
          <br>
          <br>

          <p class="text-center">※メンバーは管理者画面の「メンバー追加」から登録できます</p>

          <%= render "devise/shared/links" %>

        <% end %><!--|f|-->
     <% end %><!--admin(\/)?-->


    <!--メンバー新規登録-->
    <%- if request.path.match(/\/member(\/)?/) %>
      <h2>新規メンバー追加</h2>

        <%= form_with model: @member, url: member_registration_path do |f| %>

        <div class="field">
          <%= f.label :名前 %><br>
          <%= f.text_field :screen_name %>
        </div>

        <div class="field">
          <%= f.label :所属チーム %><br>
          <%= f.text_field :team_id %>
        </div>

        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :パスワード再入力 %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "追加" %>
        </div>
    </div>
    </div>
    <% end %>
<% end %>

