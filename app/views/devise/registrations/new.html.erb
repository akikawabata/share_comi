
<!--管理者新規登録-->
  <% if request.path.match(/\/admin(\/)?/) %>
    <h2>新規登録</h2>

    <!--<#%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>-->
    <!--  <#%= render "devise/shared/error_messages", resource: resource %>-->
      <%= form_with model: @admin, url: admin_registration_path do |f| %>
    
      <div class="field">
        <%= f.label :会社名 %><br>
        <%= f.text_field :company %>
      </div>
    
      <div class="field">
        <%= f.label :会社住所 %><br>
        <%= f.text_field :company_address %>
      </div>
    
      <div class="field">
        <%= f.label :管理者名 %><br>
        <%= f.text_field :administrator_name %>
      </div>
    
      <div class="field">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    
      <div class="field">
        <%= f.label :パスワード %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
    
      <div class="field">
        <%= f.label :パスワード再入力 %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    
      <div class="actions">
        <%= f.submit "新規登録" %>
      </div>
      
      <%= render "devise/shared/links" %>
  　　　<%= link_to "管理者ゲストログイン(閲覧用)", admin_teams_path, class: "btn btn-secondary btn-sm btn-block mb-3 sign_in", method: :post %>
    </div>
    <% end %>
  <% end %>

  <%- if request.path.match(/\/member(\/)?/) %>
    <h2>新規メンバー追加</h2>
      <%= form_with model: @member, url: member_registration_path do |f| %>
    
      <div class="field">
        <%= f.label :名前 %><br>
        <%= f.text_field :screen_name %>
      </div>
    
      <div class="field">
        <%= f.label :所属チーム %><br>
        <%= f.text_field :team_id %>
      </div>
    
      <div class="field">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    
      <div class="field">
        <%= f.label :パスワード %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
    
      <div class="field">
        <%= f.label :パスワード再入力 %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    
      <div class="actions">
        <%= f.submit "追加" %>
      </div>
    <% end %>
<% end %>